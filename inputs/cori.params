  ior       cscratch posix   read  /global/cscratch1/sd/$USER/nostriped/ior.out        256    96  1536
  ior       dwlg_str mpiio   read  $DW_JOB_STRIPED/ior.out                              64    96  1536
  ior       dwlg_pri posix   read  $DW_JOB_PRIVATE/ior.out                              64    96  1536
