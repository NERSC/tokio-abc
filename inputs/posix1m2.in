IOR START
# common options
    reorderTasks=1       # -C    reorderTasks -- changes task ordering to n+1 ordering for readback
    fsync=1              # -e    fsync -- perform fsync upon POSIX write close
    intraTestBarriers=1  # -g    intraTestBarriers -- use barriers between open, write/read, and close
    repetitions=1        # -i N  repetitions -- number of repetitions of test
    verbose=1            # -v    verbose -- output information (repeating flag increases level)
### keepFile=1           # -k    keepFile -- don't remove the test file(s) on program exit
    filePerProc=1        # -F    filePerProc -- file-per-process

# POSIX one-file-per-processor tests
# 1m2 test
    api=POSIX            # -a S  api --  API for I/O [POSIX|MPIIO|HDF5|NCMPI]
### testFile = multdir/IOR_Posix_1m2 #  -o S  testFile -- full name for test
### segmentCount=2048    # -s N  segmentCount -- number of segments
    blockSize=1048576    # -b N  blockSize -- contiguous bytes to write per task (e.g.: 8, 4k, 2m, 1g)
    transferSize=1048576 # -t N  transferSize -- size of transfer in bytes (e.g.: 8, 4k, 2m, 1g)
RUN

IOR STOP
